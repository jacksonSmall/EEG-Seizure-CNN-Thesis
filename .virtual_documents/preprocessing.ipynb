def segment_data(data, window, overlap):
    segments = []
    step = int(window * (1 - overlap)) # window 256, overlap 0.5 => step = 128

    # sliding window
    for signal in data:
        for j in range(0, len(signal) - window, step):
            segment = signal[j:j + window]
            segments.append(segment)

    # append each segmented set
    return np.array(segments)


