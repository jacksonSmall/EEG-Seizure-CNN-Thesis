def extract(zips):
    signals = []
    with zipfile.ZipFile(zips, 'r') as z:
        for fname in z.namelist():
            if fname.endswith(".TXT") or fname.endswith(".txt"):
                with z.open(fname) as f:
                    data = np.loadtxt(io.TextIOWrapper(f, encoding='utf-8'))
                    signals.append(data)
        print('zip loaded')
    return np.array(signals)



