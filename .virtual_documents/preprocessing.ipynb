from scipy.signal import welch

fs = 173.61
sets = {'A': set_A, 'B': set_B, 'C': set_C, 'D': set_D, 'E': set_E}

for set_name, data_set in sets.items():
    signal_orig = data_set[0]
    
    signal_40Hz = applyFilter(signal_orig, 0.5, 40, fs)
    signal_50Hz = applyFilter(signal_orig, 0.5, 50, fs)


    f_orig, Pxx_orig = welch(signal_orig, fs, nperseg=1024)
    f_40, Pxx_40 = welch(signal_40Hz, fs, nperseg=1024)
    f_50, Pxx_50 = welch(signal_50Hz, fs, nperseg=1024)

    # Plot PSD
    plt.figure(figsize=(12,5))
    plt.semilogy(f_orig, Pxx_orig, label='Original', alpha=0.5)
    plt.semilogy(f_40, Pxx_40, label='0.5-40 Hz Filter')
    plt.semilogy(f_50, Pxx_50, label='0.5-50 Hz Filter', linestyle='--')
    plt.title(f'PSD of Set {set_name}')
    plt.xlabel('Frequency (Hz)')
    plt.ylabel('PSD (V^2/Hz)')
    plt.xlim(0, 60)
    plt.legend()
    plt.tight_layout()
    plt.show()






